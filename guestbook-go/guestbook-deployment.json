{
   "kind":"Deployment",
   "apiVersion":"apps/v1",
   "metadata":{
      "name":"guestbook",
      "labels":{
         "app":"guestbook"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "matchLabels":{
           "app":"guestbook"
       }
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"guestbook"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"guestbook-go",
                  "image":"docker.io/laimison/guestbook:v12",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":3000
                     }
                  ]
               },
               {
                  "name":"guestbook-nginx",
                  "image":"docker.io/laimison/guestbook-nginx:v1",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":80
                     }
                  ]
               }
            ]
         }
      }
   }
}
